<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Recipe</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow mt-3 mb-3">
                <div class="card-body">
                    <form action="/recipes/<%=recipe._id %>?_method=PUT" method="POST" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label clas="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="recipe[title]"
                                value="<%=recipe.title %>" required>
                        </div>
                        <div class="mb-3">
                            <label clas="form-label" for="category">Category</label>
                            <select class="form-select" name="recipe[category]" id="category">
                                <% for (let category of categories){ %>
                                    <option value="<%=category %>" <%=recipe.category===category ? 'selected' : '' %>>
                                        <%=category %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description"
                                name="recipe[description]"><%=recipe.description %></textarea>
                        </div>
                        <div id="allIngredients" class="mb-3">
                            <label class="form-label" for="ingredients">Ingredients</label>
                            <textarea class="form-control" type="text" id="ingredients"
                                name="recipe[ingredients]"><%=recipe.ingredients %></textarea>
                        </div>
                        <div class=" mb-3">
                            <label class="form-label" for="instructions">Instructions</label>
                            <textarea class="form-control" type="text" id="instructions" name="recipe[instructions]"
                                required><%=recipe.instructions %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Change Image</label>
                            <input class="form-control" type="file" id="image" name="image">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Update Recipe</button>
                        </div>
                    </form>
                    <a href="/recipes/<%=recipe._id %>">Back to Recipe</a>
                </div>
            </div>
        </div>
    </div>