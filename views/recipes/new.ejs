<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Recipe</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow mt-3 mb-3">
                <div class="card-body">
                    <form action="/recipes" method="POST" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label clas="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="recipe[title]" placeholder="Title"
                                required>
                        </div>
                        <div class="mb-3">
                            <label clas="form-label" for="category">Category</label>
                            <select class="form-select" name="recipe[category]" id="category">
                                <option>Select category</option>
                                <% for (let category of categories){ %>
                                    <option value="<%=category %>">
                                        <%=category %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description"
                                name="recipe[description]"></textarea>
                        </div>
                        <div id="allIngredients" class="mb-3">
                            <label class="form-label" for="ingredients">Ingredients</label>
                            <input class="form-control" type="text" id="ingredients" name="recipe[ingredients]"
                                required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="instructions">Instructions</label>
                            <textarea class="form-control" type="text" id="instructions" name="recipe[instructions]"
                                required></textarea>

                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Upload Image</label>
                            <input class="form-control" type="file" id="image" name="image" required>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Add Recipe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function addIngredient() {
            const newIngredient = document.createElement('input');
            const br = document.createElement('br');
            newIngredient.setAttribute('class', 'form-control');
            newIngredient.setAttribute('type', 'text');
            newIngredient.setAttribute('name', 'recipe[ingredients]');

            document.getElementById('allIngredients').appendChild(br);
            document.getElementById('allIngredients').appendChild(newIngredient);
        }
    </script>